<Page
    x:Class="FinesApp.Views.TomasSemestrePage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:FinesApp.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
      
	


				<ScrollViewer
					
					HorizontalScrollBarVisibility="Visible"
					Grid.Row="1"
					Margin="{StaticResource MediumLeftRightMargin}"
					Background="{DynamicResource MahApps.Brushes.Gray10}">

					<TabControl>
						<TabItem 
							Header="Tomas Semestre">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height = "Auto" />
							<RowDefinition Height = "Auto" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width = "*" />
						</Grid.ColumnDefinitions>

						<GroupBox
							Name="searchGroupBox"
							Margin="10">
							<GroupBox.Header>
								<Label Foreground="White">Formulario de Búsqueda</Label>
							</GroupBox.Header>

							<WrapPanel>
								<Label>Año</Label>
								<TextBox
									Name="tbCalendarioAnio"
									Margin = "2"/>
								<Label>Semestre</Label>
								<TextBox
									Name="tbCalendarioSemestre"
									Margin = "2"/>
							</WrapPanel>
						</GroupBox>


						<GroupBox
							Name="tomaGroupBox"
							Grid.Row="2"
							Margin="10">
							<GroupBox.Header>
								<Label Foreground="White">Tomas Aprobadas</Label>
							</GroupBox.Header>
							<DataGrid Name="tomaAprobadaDataGrid"></DataGrid>
						</GroupBox>
					</Grid>

						</TabItem>

						<TabItem Header="Procesar Docentes PF">

							<Grid>
								<Grid.RowDefinitions>
									<RowDefinition Height = "Auto" />
									<RowDefinition Height = "Auto" />
								</Grid.RowDefinitions>

								<Grid.ColumnDefinitions>
									<ColumnDefinition Width = "*" />
								</Grid.ColumnDefinitions>

								<GroupBox
									Name="gbxFormProcesarDocentesPF"
									Margin="10">
									<GroupBox.Header>
										<Label Foreground="White">Formulario de Búsqueda</Label>
									</GroupBox.Header>

									<StackPanel>
										<WrapPanel>
											<Label>Calendario</Label>
											<ComboBox
												Name = "cbxCalendario2" />
									
										</WrapPanel>
										<TextBox
											Name="tbxDocentesPF"
											Grid.Column="1"
											Height="200"
											AcceptsReturn="True"
                                            AcceptsTab="True"/>
										<TextBox
												Name="tbxResultadoPF"
												Grid.Column="1"
												Height="200"
												AcceptsReturn="True"/>			
										<Button
											Content = "_Procesar Docentes..."
											Click="btnProcesarDocentesPF_Click" />
									</StackPanel>


								</GroupBox>

							</Grid>



						</TabItem>
					</TabControl>
				</ScrollViewer>

			</Grid>
</Page>
